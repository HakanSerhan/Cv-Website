@using CV_Sitesi.Models.Entity
@model List<TblSertifikalarım>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">

                        </div>
                        <div class="card-header">
                            <h3 class="card-title">Sertifika & Ödüllerim</h3>
                        </div>
                        <div class="card-body">

                                <a href="/Sertifika/YeniSertifika" class="btn btn-info">Yeni Sertifika Ekle</a>
                                <br />
                                <br />
                                <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                        <!-- timeline time label -->
                                        @foreach (var item in Model)
                                        {
                                            <div class="time-label">
                                                <span class="bg-success">
                                                    @item.Tarih
                                                </span>
                                            </div>
                                            <!-- /.timeline-label -->
                                            <!-- timeline item -->
                                            <div>
                                                @*<i class="fas fa-comment bg-warning"></i>*@
                                                <div class="timeline-item">
                                                    <div class="timeline-body">
                                                        @item.Aciklama
                                                    </div>

                                                    <a class="btn btn-danger btn-sm" href="/Sertifika/SertifikaSil/@item.ID">
                                                        <i class="fas fa-trash"></i>
                                                        Sil
                                                    </a>
                                                    <a class="btn btn-info btn-sm" href="/Sertifika/SertifikaGetir/@item.ID">
                                                        <i class="fas fa-pencil-alt"></i>
                                                        Düzenle
                                                    </a>
                                                </div>
                                            </div>
                                        }
                                        <div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
    </section>
</body>
</html>

